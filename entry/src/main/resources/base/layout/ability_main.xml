<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.huawei.com/hap/res-auto"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="horizontal"
    ohos:background_element="#000000">
    <de.hdodenhof.circleimageview.CircleImageView
        ohos:id="$+id:tempciv"
        ohos:height="80vp"
        ohos:width="80vp"
        ohos:image_src="$media:logo_instagram"
        ohos:clickable="true"
        ohos:orientation="vertical"
        ohos:layout_alignment="center"
        ohos:top_padding="10vp"
        ohos:left_margin="50vp"
        app:civ_border_width="5vp"
        app:civ_bg_color="#e95950"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        ohos:id="$+id:tempciv2"
        ohos:height="80vp"
        ohos:width="80vp"
        ohos:image_src="$media:logo_google"
        ohos:clickable="true"
        ohos:orientation="vertical"
        ohos:layout_alignment="center"
        ohos:top_padding="10vp"
        app:civ_border_width="5vp"
        app:civ_color="#dd4b39"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        ohos:id="$+id:tempciv3"
        ohos:height="80vp"
        ohos:width="80vp"
        ohos:image_src="$media:logo_linkedin"
        ohos:orientation="vertical"
        ohos:layout_alignment="center"
        ohos:top_padding="10vp"
        app:civ_border_width="5vp"
        app:civ_bg_color="#007bb5"/>
    <de.hdodenhof.circleimageview.CircleImageView
        ohos:id="$+id:tempciv4"
        ohos:height="80vp"
        ohos:width="80vp"
        ohos:image_src="$media:logo_facebook"
        ohos:orientation="vertical"
        ohos:layout_alignment="center"
        ohos:right_margin="50vp"
        ohos:top_padding="10vp"
        app:civ_border_width="5vp"
        app:civ_bg_color="#3b5998"/>

</DirectionalLayout>